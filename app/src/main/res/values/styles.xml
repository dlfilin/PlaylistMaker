<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsActListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/bw_text</item>
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="drawableTint">@color/gray_white</item>
    </style>

    <style name="BackNavigationButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:paddingHorizontal">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_12</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="TopTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
    </style>

    <style name="ys_regular_16">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ys_regular_11">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ys_medium_14">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ys_medium_19">
        <item name="android:textSize">@dimen/font_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ys_medium_22">
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>