<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/drawable_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsActListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_left</item>
        <item name="android:paddingEnd">@dimen/padding_right</item>
        <item name="android:paddingVertical">@dimen/padding_vertical</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/settings_menu_text</item>
        <item name="android:textAppearance">@style/ys_regular_16</item>
        <item name="drawableTint">@color/settings_menu_icon</item>
    </style>

    <style name="TopTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/ys_medium_22</item>
    </style>

    <style name="ys_regular_16">
        <item name="android:textSize">@dimen/settings_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ys_medium_22">
        <item name="android:textSize">@dimen/main_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>