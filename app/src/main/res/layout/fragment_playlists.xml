<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/newPlaylistButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_24"
        android:backgroundTint="@color/black_white"
        android:insetTop="@dimen/zeroDP"
        android:insetBottom="@dimen/zeroDP"
        android:paddingHorizontal="@dimen/space_14"
        android:paddingVertical="@dimen/space_6"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textAppearance="@style/ys_medium_14"
        android:textColor="@color/white_black"
        app:cornerRadius="@dimen/corner_radius_PH_button" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:indeterminateTint="@color/main_blue_color"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/placeholderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_106"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/placeholderImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_16"
            android:contentDescription="@string/placeholder_image"
            android:src="@drawable/ic_nothing_found" />

        <TextView
            android:id="@+id/placeholderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/space_24"
            android:layout_marginBottom="@dimen/space_24"
            android:text="@string/empty_playlists"
            android:textAlignment="center"
            android:textAppearance="@style/ys_medium_19"
            android:textColor="@color/black_white" />

    </LinearLayout>

</FrameLayout>