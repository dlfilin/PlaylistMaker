<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_top"
    android:paddingHorizontal="@dimen/padding_horizontal"
    android:paddingBottom="@dimen/padding_bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="28dp"
            android:clickable="true"
            android:src="@drawable/ic_arrow_back"
            android:focusable="true"
            android:contentDescription="@string/go_back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/black_text"
            android:textSize="@dimen/main_font_size" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:layout_marginTop="@dimen/margin_from_top_title"
        android:text="@string/dark_theme"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_font_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:gravity="center_vertical"
        android:text="@string/share_app"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_font_size"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:gravity="center_vertical"
        android:text="@string/ask_support"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_font_size"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_height"
        android:gravity="center_vertical"
        android:text="@string/user_agreement"
        android:textColor="@color/black"
        android:textSize="@dimen/settings_font_size"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

</LinearLayout>