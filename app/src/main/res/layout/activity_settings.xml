<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/margin_from_top_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_back"
            style="@style/BackNavigationButton"
            android:contentDescription="@string/go_back_button"
            app:tint="@color/bw_title" />

        <TextView
            style="@style/TopTitleStyle"
            android:text="@string/settings"
            android:textColor="@color/bw_title" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/darkTheme"
        style="@style/SettingsActListItemStyle"
        android:text="@string/dark_theme" />

    <TextView
        android:id="@+id/share_app"
        style="@style/SettingsActListItemStyle"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/contact_support"
        style="@style/SettingsActListItemStyle"
        android:text="@string/contact_support"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        android:id="@+id/user_agreement"
        style="@style/SettingsActListItemStyle"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />

</LinearLayout>